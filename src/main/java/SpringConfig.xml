<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- Dependency injection -->

	<!-- Property Injection / Setter Injection -->

	<bean id="employee" class="com.cg.spring.core.demo.model.Employee">
		<property name="eid">
			<value>101</value>
		</property>
		<property name="firstName">
			<value>Sonu</value>
		</property>
		<property name="salary">
			<value>10.6</value>
		</property>
	</bean>

	<bean id="employee2"
		class="com.cg.spring.core.demo.model.Employee">
		<property name="eid">
			<value>102</value>
		</property>
		<property name="firstName">
			<value>Monu</value>
		</property>
		<property name="salary">
			<value>15.5</value>
		</property>
	</bean>

	<!-- Constructor injection -->

	<bean id="emp3" class="com.cg.spring.core.demo.model.Employee">
		<constructor-arg value="103" type="int"></constructor-arg>
		<constructor-arg value="Tonu" type="java.lang.String"></constructor-arg>
		<constructor-arg value="12.5" type="double"></constructor-arg>
	</bean>

	<!-- Inner Bean -->

	<bean id="department"
		class="com.cg.spring.core.demo.model.Department">
		<property name="id" value="20"></property>
		<property name="name" value="Marketing"></property>
		<property name="functions">
			<list>
				<value>Sales</value>
				<value>Promotions</value>
				<value>Customer Care</value>
			</list>
		</property>
	</bean>

	<bean id="emp4" class="com.cg.spring.core.demo.model.Employee">
		<property name="eid">
			<value>104</value>
		</property>
		<property name="firstName">
			<value>Tonu</value>
		</property>
		<property name="salary">
			<value>15.8</value>
		</property>
		<property name="department">
			<bean id="department"
				class="com.cg.spring.core.demo.model.Department">
				<property name="id" value="20"></property>
				<property name="name" value="Marketing"></property>
				<property name="functions">
					<list>
						<value>Sales</value>
						<value>Promotions</value>
						<value>Customer Care</value>
					</list>
				</property>
			</bean>
		</property>
	</bean>

	<!-- Inheritance in beans -->

	<bean id="emp5" class="com.cg.spring.core.demo.model.Employee">
		<property name="eid">
			<value>105</value>
		</property>
		<property name="firstName">
			<value>Gonu</value>
		</property>
	</bean>

	<bean id="emp6" parent="emp5">
		<property name="firstName">
			<value>Ponu</value>
		</property>
		<property name="salary">
			<value>45.5</value>
		</property>
	</bean>

	<!-- Autowiring -->

	<bean id="emp7" class="com.cg.spring.core.demo.model.Employee"
		autowire="constructor">
		<constructor-arg type="int">
			<value>107</value>
		</constructor-arg>
		<constructor-arg type="java.lang.String">
			<value>Sonu</value>
		</constructor-arg>
		<constructor-arg type="double">
			<value>10.5</value>
		</constructor-arg>
	</bean>


</beans>
